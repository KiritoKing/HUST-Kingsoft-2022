{
  "name": "hr-manage-system",
  "version": "1.0.0",
  "description": "基于React和Koa.js的前后端分离的全栈Web人员管理应用",
  "main": "index.tsx",
  "proxy": "http://localhost:9001",
  "author": "KiritoKing",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@yarnpkg/pnpify": "^4.0.0-rc.44",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.0",
    "lerna": "^6.6.2",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "typescript": "^4.8.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npx lerna run start --parallel",
    "build": "npx lerna run build",
    "test": "npx lerna run typescript",
    "clean": "npx lerna run clean --parallel",
    "prepublish": "npx lerna run prepublish --parallel",
    "prepare": "npx lerna run prepare --parallel",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
